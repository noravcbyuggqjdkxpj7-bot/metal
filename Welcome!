    // Initialize chart
    let rewardChart;

    function initChart() {
      const ctx = document.getElementById('rewardChart').getContext('2d');
      rewardChart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: ['$0-199', '$200-499', '$500-999', '$1000+'],
          datasets: [{
            label: 'Reward Amount ($)',
            data: [0, 30, 80, 150],
            backgroundColor: [
              '#9CA3AF',
              '#3B82F6', 
              '#EAB308',
              '#8B5CF6'
            ],
            borderColor: [
              '#6B7280',
              '#2563EB',
              '#CA8A04', 
              '#7C3AED'
            ],
            borderWidth: 2,
            borderRadius: 8
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: false
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              ticks: {
                callback: function(value) {
                  return '$' + value;
                }
              }
            }
          }
        }
      });
    }

    function changeLang(lang) {
      const t = translations[lang];
      for (const [key, value] of Object.entries(t)) {
        const element = document.getElementById(key);
        if (element) {
          element.textContent = value;
        }
      }

      // Update placeholder
      const salesInput = document.getElementById('salesInput');
      if (salesInput) {
        const placeholders = {
          en: 'Enter your monthly sales',
          zh: '输入您的月销售额',
          es: 'Ingresa tus ventas mensuales',
          fr: 'Entrez vos ventes mensuelles'
        };
        salesInput.placeholder = placeholders[lang];
      }
    }

    function calculateReward() {
      const sales = parseFloat(document.getElementById('salesInput').value) || 0;
      let reward = 0;

      if (sales >= 1000) {
        reward = 150;
      } else if (sales >= 500) {
        reward = 80;
      } else if (sales >= 200) {
        reward = 30;
      }

      document.getElementById('rewardResult').textContent = '$' + reward;
    }

    // Initialize page
    document.addEventListener('DOMContentLoaded', function() {
      initChart();
      changeLang('en');
    });
  </script>
</body>
